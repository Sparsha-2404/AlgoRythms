# === Clarion .env Settings ===

# MongoDB connection URI
MONGO_URI = mongodb://localhost:27017/clarion

# JWT Secret for user authentication tokens
JWT_SECRET = yourSuperSecretKey

# JWT Token expiry time (example: 1 day)
JWT_EXPIRE = 1d

# Server environment (set to production when deploying)
NODE_ENV = development

# Server running port (optional, fallback is 5000)
PORT = 5000
